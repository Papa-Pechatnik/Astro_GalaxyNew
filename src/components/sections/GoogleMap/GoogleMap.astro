<section class="map-section">
    <div class="map-box">
        <iframe class="map" src="https://www.google.com/maps/d/embed?mid=1zoIb7lJaCTmvrq1pXPxIS-IpWN7ImqXZ&ehbc=2E312F" width="1920" height="360" style="border:0;" allowfullscreen="" loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
</section>
<style>
    .map-section {
        margin-inline: auto;
        max-width: 100vw;
        height: 28.75rem;
        aspect-ratio: 1920 / 450;
        overflow: hidden;
    }

    .map-box {
        max-width: inherit;
        height: inherit;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .map {
        max-width: 100%;
        height: 100%;
    }

    @media screen and (max-width: 767.98px) {
        .map-section {
            height: 22.5rem;
        }
    }
</style>