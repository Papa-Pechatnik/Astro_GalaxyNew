---
import HeaderBlock from '../Home/blocks/HeaderBlocks.astro';
import NewsCard from '../Home/blocks/NewsCard.astro';
import BtnLink from '../../elements/BtnLink.astro';
---
<section class="news section_padding">
    <div class="container">
        <div class="news-wrapp">
            <HeaderBlock classHeader="center" subtitle="latest posts" title="Astronomy News" />
            <ul class="news-list">
                <NewsCard />
                <NewsCard />
                <NewsCard />
                <NewsCard />
            </ul>
            <BtnLink text="View all posts" />
        </div>
    </div>
</section>

<style>
    .news-wrapp {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .news-list {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
        color: var(--color-white);
        gap: calc(var(--gap) * 2);
        margin-top: clamp(1.875rem, -1.45812rem + 6.944vw, 3.75rem);
    }

    @media screen and (max-width: 1199.98px) {
        .news-list {
            gap: calc(var(--gap) * 1.25);
        }
    }

    @media screen and (max-width: 991.98px) {
        .news-list {
            display: flex;
            flex-direction: column;
        }
    }

    @media screen and (max-width: 575.98px) {
        .news-list {
            gap: calc(var(--gap) * 0.75);
        }
    }
</style>