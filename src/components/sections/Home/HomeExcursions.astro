---
import { Picture } from "astro:assets";
import imgLocal from "./image/telescope_1200w.jpg";
import BtnLink from "../../elements/BtnLink.astro";
---
<section class="excursions section_padding">
    <section class="content">
        <h2 class="content__title">
            Night Excursions <br>
            to the Observatory
        </h2>
        <p class="content__text"> 
            Explore the highlights of the southern sky on a night tour at the oldest local observatory. Use our telescopes to see the stars during this unique experience.
        </p>
        <BtnLink text="Book now"/>
    </section>
    <div class="excursions__img">
        <Picture
        class="excursions__img-img"
        src={imgLocal} 
        formats={["avif", "webp", "jpeg" ]} 
        widths={[320, 530, 960, imgLocal.width]}
        sizes={`(max-width: 390px) 320px,
                (max-width: 576px) 530px,
                (max-width: 992px) 960px,
                (min-width: 1200px) ${imgLocal.width}px`}
        alt="newstitle" />
    </div>
</section>

<style>
    .excursions {
        position: relative;
        max-width: 100vw;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .content {
        max-width: var(--sm);
        z-index: 1;
        color: var(--color-white);
        text-align: center;
        margin-left: var(--padding);
        margin-right: var(--padding);
    }

    .content__title {
        font-family: var(--font-Yanone);
        font-weight: 700;
        font-size: clamp(2.5rem, 0.88468rem + 4.487vw, 4.25rem);
        line-height: 112%;
    }

    .content__text {
        font-family: var(--font-OpenSans);
        font-weight: 400;
        font-size:clamp(1.125rem, 0.74808rem + 1.047vw, 1.25rem);
    line-height: 1.6;
        letter-spacing: .01em;
        margin-top: 26px;
    }

    .excursions__img {
        z-index: 0;
        position: absolute;
        width: 100%;
    }

    .excursions__img-img {
        width: 100%;
        object-fit: cover;
    }

    @media screen and (max-width: 767.98px) {
        .content__text {
        margin-top: 20px;
    }
    }
</style>