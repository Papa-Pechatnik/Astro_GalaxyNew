---
import LinkActivPage from "../../elements/LinkActivPage.astro"

interface Props {
    titlePage: string;
	page: string;
}

const {titlePage, page} = Astro.props;
---
<section class="starry-sky">
    <div class="container">
        <header class="starry-sky__header">
            <h1 class="section_padding font-Yanone">{titlePage}</h1>
            <LinkActivPage page={page}/>
        </header>
    </div>
    <ul class="starry-sky__background">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
    </ul>
</section>

<style>
    .starry-sky {
        width: 100%;
        position: relative;
        height: auto;
        overflow: hidden;
    }

    .starry-sky__header {
        position: relative;
        z-index: 2;
        display: flex;
        flex-direction: column;
        align-items: start;
    }

    h1 {
        font-size: clamp(2.5rem, -0.83312rem + 6.944vw, 4.375rem);
        text-align: left;
        color: var(--color-white);
    }

    /*Animation */
    .starry-sky__background {
        position: absolute;
        top: 0;
        left: 0;
        z-index: 0;
        width: 100vw;
        height: 100%;
        background: var(--color-black);
        padding: 0;
        margin: 0;

        & li {
            position: absolute;
            z-index: 2;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            list-style: none;
            background: url("./starry-sky-background.avif");
            background-size: contain;
            animation: snowing 20s linear infinite;

            &:nth-child(1) {
                animation-delay: 16s;
            }

            &:nth-child(2) {
                animation-delay: 12s;
            }

            &:nth-child(3) {
                animation-delay: 8s;
            }

            &:nth-child(4) {
                animation-delay: 4s;
            }

            &:nth-child(5) {
                animation-delay: 0s;
            }
        }
    }

    @keyframes snowing {
        0% {
            transform: scale(1) rotate(0deg);
            opacity: 0;
        }

        50% {
            transform: scale(2) rotate(180deg);
            opacity: .5;
        }

        100% {
            transform: scale(0) rotate(360deg);
            opacity: 1;
        }
    }
</style>